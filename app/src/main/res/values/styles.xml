<resources>

    <!-- Base application theme. -->
    
    <style name="AppThemeBase" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="colorPrimary">#00ffff</item>
        <item name="colorPrimaryDark">#ffff00</item>
        <item name="colorAccent">#ff00ff</item>
        <item name="android:textColorPrimary">#0000ff</item>
    </style>
    
    <style name="AppTheme" parent="AppThemeBase">
        <!-- Customize your theme here. -->
    </style>


    <style name="style_table">
        <item name="android:layout_marginBottom">1dp</item>
        <item name="android:background">@drawable/background_shape</item>
    </style>

    <style name="style_table_title">
        <item name="android:gravity">right</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>
    <style name="style_table_et_value">
        <item name="android:layout_weight">1</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:paddingBottom">3dp</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">#FFA35D1B</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:background">@drawable/onclick_selector</item>
    </style>
    <style name="style_table_tv_value" parent="style_table_et_value">
        <item name="android:checkable">true</item>
    </style>

    <style name="style_imagebutton">
        <item name="android:layout_marginBottom">1dp</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:paddingBottom">3dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#FFA35D1B</item>
        <item name="android:background">@drawable/checkbox_selector</item>
    </style>

    <style name="StyleListView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:divider">@drawable/divider</item>

    </style>
    <style name="StyleListViewItem">
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#ff000000</item>
    </style>

    <style name="menu_labels_style">
        <item name="android:background">@drawable/fab_label_background</item>
        <item name="android:textColor">@color/white</item>
    </style>


    <style name="NumberButtonText">
        <item name="android:layout_width">63dp</item>
        <item name="android:layout_height">63dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#ff000000</item>
        <item name="android:background">@drawable/imagebutton_selector</item>
    </style>



    <style name="StyleTable">
        <item name="android:layout_margin">1dp</item>
        <item name="android:background">@drawable/table_frame_gray</item>
    </style>
    <style name="StyleTableTitle">
        <item name="android:paddingRight">3dp</item>
        <item name="android:paddingLeft">3dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="StyleTableValue">
        <item name="android:layout_weight">1</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:paddingBottom">3dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#FFA35D1B</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:checkable">true</item>
        <item name="android:background">@drawable/param_selector</item>
    </style>

    <style name="GridButtonText" parent="NumberButtonText">
        <item name="android:textSize">15sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">normal</item>
    </style>



</resources>
